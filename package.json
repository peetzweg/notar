{
	"name": "notar",
	"version": "0.0.0",
	"license": "MIT",
	"bin": "dist/cli.js",
	"engines": {
		"node": ">=10"
	},
	"scripts": {
		"build": "tsc && chmod +x dist/cli.js",
		"start": "npm run build && dist/cli.js",
		"pretest": "npm run build",
		"test": "xo && ava"
	},
	"files": [
		"dist/cli.js"
	],
	"dependencies": {
		"@abimate/solmate": "^0.0.5",
		"dotenv": "^16.0.1",
		"ethers": "^5.6.9",
		"ink": "^3.2.0",
		"ink-select-input": "^4.2.1",
		"ink-spinner": "^4.0.3",
		"ink-text-input": "^4.0.3",
		"meow": "^9.0.0",
		"react": "^17.0.2"
	},
	"ava": {
		"typescript": {
			"extensions": [
				"tsx"
			],
			"rewritePaths": {
				"source/": "dist/"
			}
		}
	},
	"xo": {
		"extends": "xo-react",
		"rules": {
			"react/prop-types": "off"
		}
	},
	"devDependencies": {
		"@ava/typescript": "^3.0.1",
		"@sindresorhus/tsconfig": "^3.0.1",
		"@types/react": "^18.0.14",
		"ava": "^4.3.0",
		"chalk": "^4.1.2",
		"eslint-config-xo-react": "^0.27.0",
		"eslint-plugin-react": "^7.30.1",
		"eslint-plugin-react-hooks": "^4.6.0",
		"ink-testing-library": "^2.1.0",
		"typescript": "^4.7.4",
		"xo": "^0.39.1"
	}
}
